<?xml version="1.0" encoding="utf-8"?>
<com.ooyueoo.selectdemo.SCConstraintLayout_3
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatCheckBox

        app:mustChoose="false"
        android:theme="@style/MyCheckBox"
        android:layout_marginLeft="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Cb1"
      />
    <androidx.appcompat.widget.AppCompatEditText

        app:mustChoose="true"
        android:layout_marginLeft="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        app:layout_constraintLeft_toRightOf ="@+id/checkBox1"
        android:id="@+id/et_1"
        android:layout_width="100dp"
        android:layout_height="50dp"/>
    <androidx.appcompat.widget.AppCompatCheckBox
        app:mustChoose="true"
        android:theme="@style/MyCheckBox"
        android:layout_marginLeft="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="@+id/checkBox1"
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Cb2"
        />
    <androidx.appcompat.widget.AppCompatEditText
        app:strMiniLength="1"
        app:mustChoose="true"
        android:layout_marginLeft="50dp"
        app:layout_constraintTop_toTopOf="@+id/et_1"
        android:layout_marginTop="80dp"
        app:layout_constraintLeft_toRightOf="@+id/checkBox2"
        android:id="@+id/et_2"
        android:layout_width="100dp"
        android:layout_height="50dp"/>

    <androidx.appcompat.widget.AppCompatCheckBox
        app:mustChoose="true"
        android:theme="@style/MyCheckBox"
        android:layout_marginLeft="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="@+id/checkBox2"
        android:id="@+id/checkBox3"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="CB3"
        />
    <androidx.appcompat.widget.AppCompatEditText
        app:strMiniLength="2"
        app:mustChoose="true"
        android:layout_marginLeft="50dp"
        app:layout_constraintTop_toTopOf="@+id/et_2"
        android:layout_marginTop="80dp"
        app:layout_constraintLeft_toRightOf="@+id/checkBox3"
        android:id="@+id/et_3"
        android:layout_width="100dp"
        android:layout_height="50dp"/>



    <androidx.appcompat.widget.AppCompatCheckBox
        android:theme="@style/MyCheckBox"
        app:mustChoose="true"
        android:layout_marginLeft="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="@+id/checkBox3"
        android:id="@+id/checkBox5"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="CB5"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:gravity="center"
        android:text="tv_1"
        app:strMiniLength="3"
        android:layout_marginLeft="50dp"
        app:layout_constraintTop_toTopOf="@+id/et_3"
        android:layout_marginTop="80dp"
        app:layout_constraintLeft_toRightOf="@+id/checkBox5"
        android:id="@+id/tv_1"
        android:layout_width="100dp"
        android:layout_height="50dp"/>



    <androidx.appcompat.widget.AppCompatButton
        app:mustChoose="true"
        android:id="@+id/btn"
        android:enabled="false"
        android:background="@drawable/btn_select"
        app:targetView="true"
        android:text="чбошод"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="80dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/checkBox5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></androidx.appcompat.widget.AppCompatButton>

    <LinearLayout
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="@+id/btn"
        android:id="@+id/content1"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatCheckBox
            app:mustChoose="true"
            android:theme="@style/MyCheckBox"


            android:id="@+id/checkBox4"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="CB4"
            />
        <androidx.appcompat.widget.AppCompatEditText
            app:strMiniLength="3"
            app:mustChoose="true"
            android:layout_marginLeft="50dp"



            android:id="@+id/et_4"
            android:layout_width="100dp"
            android:layout_height="50dp"/>

    </LinearLayout>



</com.ooyueoo.selectdemo.SCConstraintLayout_3>